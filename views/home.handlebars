<h2>Products catalog</h2>
<table class="table table-hover">
    <thead>
        <tr>
          <th>
            Product Name
          </th>
          <th>
            Product Price
          </th>
        </tr>
    </thead>
    <tbody>
      {{#each products}}

      <tr>
        <td>
        <a href="/{{this.id}}"> {{this.name}}</a>
        </td>
        <td>
          {{this.price}}
        </td>
      </tr>
      {{/each}}
    </tbody>
</table>
