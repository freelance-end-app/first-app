<form action="/addGig" method="post">
    <legend> Add Gig </legend>


    <div class="form-group">
        <label for="inputName">Gig Name</label>
        <input type="text" class="form-control" id="inputName" placeholder="Name" name="name">
    </div>


    <button type="submit" class="btn btn-default">Add Git</button>

</form>s
<form action="/addProduct" method="post">
    <legend> Add Product </legend>


    <div class="form-group">
        <label for="inputName">Product Name</label>
        <input type="text" class="form-control" id="inputName" placeholder="Name" name="name">
    </div>

    <div class="form-group">
        <label for="inputPrice">Password</label>
        <input type="text" class="form-control" id="inputPrice" placeholder="Price" name="price">
    </div>

    <button type="submit" class="btn btn-default">Add</button>
</form>



<form action="/editProduct" method="post">
    <legend> Edit Product </legend>


    <div class="form-group">
        <label for="selectName">Select Product</label>
        <select class="form-control" name="selectName" id="selectName">
            {{#each products}}
                <option>{{this.name}}</option>
            {{/each}}


        </select>
    </div>
    <div class="form-group">
        <label for="inputName">Product Name</label>
        <input type="text" class="form-control" id="inputName" placeholder="Name" name="name">
    </div>

    <div class="form-group">
        <label for="inputPrice">Password</label>
        <input type="text" class="form-control" id="inputPrice" placeholder="Price" name="price">


        <button type="submit" class="btn btn-default">Edit</button>
</form>
